<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.ybi"
        version   = "0.1">
        
  <name>YBI</name>
  <description>YBI app.</description>
  <author href="http://sapiens.media" email="a.gladilov@yandex.ru">Alex Gladilov</author>
  <content src="index.html"/>
  
  <access origin="*"/>
  <preference name="phonegap-version" value="cli-6.0.0" />
  <gap:platform name="ios" />
  <gap:platform name="android" />
  
  <preference name="StatusBarOverlaysWebView" value="false"/>
  <preference name="permissions" value="none"/>
  <preference name="orientation" value="portrait"/>
  <preference name="target-device" value="universal"/>
  <preference name="fullscreen" value="false" />
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="prerendered-icon" value="false"/>
  <preference name="stay-in-webview" value="true"/>
  <preference name="ios-statusbarstyle" value="black-translucent"/>
  <preference name="detect-data-types" value="false"/>
  <preference name="exit-on-suspend" value="false"/>
  <preference name="show-splash-screen-spinner" value="true"/>
  <preference name="auto-hide-splash-screen" value="true"/>
  <preference name="android-build-tool" value="gradle" />
  
  <gap:plugin name="com.phonegap.plugin.statusbar" source="pgb" version="1.1.0" />
  <gap:plugin name="org.apache.cordova.device" source="pgb" version="0.3.0" />
  <gap:plugin name="org.apache.cordova.dialogs" source="pgb" version="0.3.0" />
  <gap:plugin name="org.apache.cordova.inappbrowser" source="pgb" version="0.6.0" />
  <gap:plugin name="org.apache.cordova.network-information" source="pgb" version="0.2.15" />
  <!--<gap:plugin name="com.phonegap.plugins.pushplugin" version="2.5.0" />-->
  
  <gap:plugin name="onesignal-cordova-plugin" source="npm" />
  
